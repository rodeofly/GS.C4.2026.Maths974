---
const { title = "Guide de Survie" } = Astro.props;
---

<nav class="main-navbar no-print">
  <div class="navbar-content">
    <a href="/" class="brand">
      <span class="logo-icon">M974</span>
      <span class="brand-text">Maths974</span>
    </a>
    
    <div class="nav-title">{title}</div>

    <div class="nav-actions">
      <a href="/" class="nav-link">Accueil</a>
      <a href="/guide/arborescence/" class="nav-link">Plan</a>
      <button onclick="window.print()" class="btn-print" aria-label="Imprimer cette page">
        üñ®Ô∏è
      </button>
    </div>
  </div>
</nav>

<style>
  .main-navbar {
    background: #1e293b; /* Bleu nuit pour faire pro */
    border-bottom: 1px solid #334155;
    color: white;
    position: sticky;
    top: 0;
    z-index: 50;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  .navbar-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .logo-icon {
    background: #f59e0b; /* Orange Rapido */
    color: #1e293b;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 900;
  }

  .nav-title {
    font-size: 1rem;
    color: #94a3b8;
    font-weight: 500;
    display: none;
  }
  @media (min-width: 768px) { .nav-title { display: block; } }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    text-decoration: none;
    color: #e2e8f0;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }
  .nav-link:hover { color: #f59e0b; }

  .btn-print {
    background: #334155;
    border: 1px solid #475569;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    color: white;
    cursor: pointer;
    transition: background 0.2s;
  }
  .btn-print:hover { background: #475569; }
</style>