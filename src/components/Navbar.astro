---
// src/components/Navbar.astro
const { title = "Guide de Survie" } = Astro.props;

// üõ†Ô∏è BASE URL
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<nav class="main-navbar no-print">
  <div class="navbar-content">
    <a href={`${base}/`} class="brand">
      <span class="logo-icon">M974</span>
      <span class="brand-text">Maths974</span>
    </a>
    
    <div class="nav-title">{title}</div>

    <div class="nav-actions">
      <a href={`${base}/recherche/`} class="nav-link nav-link-primary">
        <span class="nav-icon">üîç</span>
        <span class="nav-text">Recherche</span>
      </a>
      <a href={`${base}/recherche/favoris/`} class="nav-link">
        <span class="nav-icon">‚≠ê</span>
        <span class="nav-text">Favoris</span>
      </a>
      <a href={`${base}/`} class="nav-link">Accueil</a>
      
      <button onclick="window.print()" class="btn-print" aria-label="Imprimer cette page">
        üñ®Ô∏è
      </button>
    </div>
  </div>
</nav>

<style>
  .main-navbar {
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    border-bottom: 1px solid #334155;
    color: white;
    position: sticky;
    top: 0;
    z-index: 50;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
  }

  .navbar-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .logo-icon {
    background: #f59e0b; /* Orange Rapido */
    color: #1e293b;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 900;
  }

  .nav-title {
    font-size: 1rem;
    color: #94a3b8;
    font-weight: 500;
    display: none;
  }
  @media (min-width: 768px) { 
    .nav-title { display: block; } 
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: #e2e8f0;
    font-size: 0.9rem;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }
  
  .nav-link:hover { 
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
  }
  
  .nav-link-primary {
    background: rgba(245, 158, 11, 0.15);
    border: 1px solid rgba(245, 158, 11, 0.3);
  }
  
  .nav-link-primary:hover {
    background: rgba(245, 158, 11, 0.25);
    border-color: #f59e0b;
  }
  
  .nav-icon {
    font-size: 1.1rem;
  }
  
  .nav-text {
    display: none;
  }
  
  @media (min-width: 640px) {
    .nav-text {
      display: inline;
    }
  }

  .btn-print {
    background: #334155;
    border: 1px solid #475569;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    color: white;
    cursor: pointer;
    transition: background 0.2s;
    font-size: 1.1rem;
  }
  .btn-print:hover { background: #475569; }
  
  /* Responsive mobile */
  @media (max-width: 640px) {
    .navbar-content {
      padding: 0.5rem 1rem;
    }
    
    .brand-text {
      display: none;
    }
    
    .nav-actions {
      gap: 0.5rem;
    }
    
    .nav-link {
      padding: 0.4rem;
    }
  }
</style>