---
import BasePrintLayout from './BasePrintLayout.astro';
import '../styles/print-A5.css';
import printA5StylesUrl from '../styles/print-A5.css?url';

const { info, niveau, theme, sousTheme } = Astro.props;
const fm = info?.frontmatter ?? {};

// Petite nuance : on ajoute "Format A5" au titre pour ce layout
const titleRaw = fm.title ?? fm.sous_theme ?? sousTheme ?? 'Sous-thème';
const title = `${titleRaw} — Format A5`;
const themeLabel = fm.theme ?? theme ?? 'Thème';
const niveauLabel = fm.niveau ?? niveau ?? '';
---

<BasePrintLayout
  info={info}
  title={title}
  layoutClass="layout-a5"
  cssUrl={printA5StylesUrl}
  niveauLabel={niveauLabel}
  themeLabel={themeLabel}
>
  <slot />
  <slot name="footer" slot="footer" />
</BasePrintLayout>