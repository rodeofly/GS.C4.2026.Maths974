---
import { getCollection } from 'astro:content';
import RapidoLayout from '../../layouts/RapidoLayout.astro';
import A4Layout from '../../layouts/A4.astro';

export async function getStaticPaths() {
  const entries = await getCollection('rapidos');
  return entries.map(entry => ({
    params: { slug: entry.slug.replace(/\/index$/, '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { slug } = Astro.params;

// Est-ce un index de niveau ? (ex: "sixieme" ou "sixieme/index")
const isIndex = entry.id.endsWith('index.md');

// Si c'est un index, on cherche ses enfants (les Rapidos)
let children = [];
if (isIndex) {
  const allRapidos = await getCollection('rapidos');
  children = allRapidos
    .filter(e => e.slug.startsWith(slug + '/') && !e.slug.endsWith('/index'))
    .sort((a, b) => a.id.localeCompare(b.id));
}

// PrÃ©parer le contenu de l'index
const { Content: IndexContent } = await entry.render();
const hasIndexContent = isIndex && entry.body && entry.body.trim().length > 0;
---

{/* CAS 1 : C'est une fiche Rapido (P1-S1) -> Mode Projection */}
{!isIndex && <RapidoLayout info={entry} />}

{/* CAS 2 : Menu du niveau */}
{isIndex && (
  <A4Layout info={entry} title={entry.data.title} theme="Rapidos">
    
    {/* ðŸ”µ INDEX EN PREMIER (si le fichier a du contenu) */}
    {hasIndexContent && (
      <article class="etiquette etiquette-full-width etiquette-index format-1_1">
        <header class="etiquette-header">
          <h2 class="etiquette-title">{entry.data.title}</h2>
        </header>
        
        <section class="etiquette-section section-texte">
          <IndexContent />
        </section>
      </article>
    )}
    
    {/* ðŸŸ¢ LISTE DES RAPIDOS ENSUITE */}
    <div class="rapido-menu-grid">
      {children.length > 0 ? children.map(child => (
        <a href={`/rapidos/${child.slug}/`} class="rapido-link-card">
          <span class="rapido-icon">âš¡</span>
          <span class="rapido-title">Rapido {child.data.numero}</span>
        </a>
      )) : (
        <p>Aucun rapido disponible pour ce niveau.</p>
      )}
    </div>
    
  </A4Layout>
)}

<style>
  .rapido-menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4) 0;
    grid-column: 1 / -1; /* Prend toute la largeur */
  }
  
  .rapido-link-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-6);
    background: linear-gradient(135deg, var(--color-rapido-primary), var(--color-rapido-secondary));
    border: 2px solid transparent;
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: white;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }
  
  .rapido-link-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-rapido);
    border-color: var(--color-accent);
  }
  
  .rapido-icon { 
    font-size: var(--text-3xl); 
  }
  
  .rapido-title { 
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
  }
</style>