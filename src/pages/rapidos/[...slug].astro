---
// src/pages/rapidos/[...slug].astro
import { getCollection } from 'astro:content';
import RapidoLayout from '../../layouts/RapidoLayout.astro';
import A4Layout from '../../layouts/A4.astro';

export async function getStaticPaths() {
  const entries = await getCollection('rapidos');
  return entries.map(entry => ({
    params: { slug: entry.slug.replace(/\/index$/, '') },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { slug } = Astro.params;

// Est-ce un index de niveau ? (ex: "sixieme" ou "sixieme/index")
const isIndex = entry.id.endsWith('index.md');

// Si c'est un index, on cherche ses enfants (les Rapidos)
let children = [];
if (isIndex) {
  const allRapidos = await getCollection('rapidos');
  children = allRapidos
    .filter(e => e.slug.startsWith(slug + '/') && !e.slug.endsWith('/index'))
    .sort((a, b) => a.id.localeCompare(b.id)); // Tri par ID (ex: 1.1, 1.2...)
}

// Pr√©parer le contenu de l'index pour la modale
const { Content: IndexContent } = await entry.render();
const hasIndexContent = isIndex && entry.body && entry.body.trim().length > 0;
---

{/* CAS 1 : C'est une fiche Rapido (P1-S1) -> Mode Projection (INCHANG√â) */}
{!isIndex && <RapidoLayout info={entry} />}

{/* CAS 2 : Menu du niveau (MODIFI√â) */}
{isIndex && (
  <A4Layout 
    info={entry} 
    title={entry.data.title} 
    theme="Rapidos"
    indexContent={hasIndexContent ? IndexContent : null}
  >
    
    {/* NOTE : L'article d'intro a √©t√© supprim√© ici car le contenu est pass√© dans 'indexContent' */}
    
    {/* üü¢ LISTE DES RAPIDOS */}
    <div class="rapido-menu-grid">
      {children.length > 0 ? children.map(child => (
        <a href={`/rapidos/${child.slug}/`} class="rapido-link-card">
          <span class="rapido-icon">‚ö°</span>
          <span class="rapido-title">Rapido {child.data.numero}</span>
        </a>
      )) : (
        <div class="empty-msg">Aucun rapido disponible pour le moment.</div>
      )}
    </div>
    
  </A4Layout>
)}

<style>
  .rapido-menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4) 0;
    grid-column: 1 / -1; /* Prend toute la largeur */
  }
  
  .rapido-link-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-6);
    background: linear-gradient(135deg, var(--color-rapido-primary), var(--color-rapido-secondary));
    border: 2px solid transparent;
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: white;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }
  
  .rapido-link-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-rapido);
    border-color: var(--color-accent);
  }
  
  .rapido-icon { 
    font-size: var(--text-3xl);
  }
  
  .rapido-title { 
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
  }

  .empty-msg {
    color: var(--color-gray-500);
    font-style: italic;
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
  }
</style>